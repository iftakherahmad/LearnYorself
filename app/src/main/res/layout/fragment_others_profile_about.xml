<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/blue"
tools:context=".OthersProfileAbout">

<!-- TODO: Update blank fragment layout -->




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/ic_stars_black_24dp"
        android:contentDescription="ProfilePic"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent"
        android:text="@string/username"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="120dp"
            android:src="@drawable/unknownperson"
            android:scaleType="fitXY"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="ProfilePic"
            android:layout_height="120dp"
            />
    </RelativeLayout>



</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:text="Name:"
        android:layout_marginStart="20dp"

        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="18sp"
        android:text="name"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Email:"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"

        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="18sp"
        android:text="email"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Institution:"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/institution"
        android:textSize="18sp"
        android:text="institution"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Profession:"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"

        />
    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/profession"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:entries="@array/userprofessions"
        android:layout_height="wrap_content">
    </Spinner>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_add_black_24dp"
            android:id="@+id/addfriend"
            android:background="@color/green"
            android:layout_marginLeft="10dp"
            android:text="Add"
            />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  BLOCK"
                android:background="@color/red"
                android:id="@+id/blockperson"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/ic_block_black_24dp"
                />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
