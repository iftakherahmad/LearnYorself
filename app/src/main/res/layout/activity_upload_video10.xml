<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical"
    style="@style/Theme.AppCompat.Light"
    tools:context=".UploadVideo10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text="Title: "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:hint="Enter Video Title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="TAG: "
            android:textColor="@color/black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:hint="Enter Video TAG" />
    </LinearLayout>

    <VideoView
        android:id="@+id/vedioview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:minWidth="@dimen/browser_actions_context_menu_max_width"
        android:minHeight="200dp"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="true"
        android:autofillHints="select some video"
        android:outlineAmbientShadowColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/uploadvideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/blue"
            android:drawableLeft="@drawable/ic_file_upload_black_24dp"
            android:text="Upload" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/filename"
            android:layout_marginLeft="5dp"
            android:text="No file selected" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/selectvideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:background="@color/blue"
                android:drawableLeft="@drawable/ic_videocam_black_24dp"
                android:text="Select" />



        </RelativeLayout>


    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:progressTint="@color/green"
        android:progressBackgroundTint="@color/white"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:progress="0"
        android:layout_marginLeft="20dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        />



</LinearLayout>